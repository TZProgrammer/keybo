% ====================
% Definitions
% ====================

\definecolor{lightgray}{HTML}{282a36}
\definecolor{brillaintblue}{HTML}{1DC8FF} % 
% Secondary
\definecolor{yellow}{RGB}{248, 164, 41}
\definecolor{orange}{RGB}{193, 102, 34}
\definecolor{red}{RGB}{143, 57, 49}
\definecolor{lightgreen}{RGB}{145, 171, 90}
\definecolor{darkgreen}{RGB}{88, 89, 63}
\definecolor{violet}{HTML}{1DC8FF} % 8705F1
\definecolor{bgcol}{HTML}{12151F}
\setbeamercolor{background canvas}{bg=bgcol}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{normal text}{fg=white}
\setbeamercolor{palette primary}{fg=white,bg=bgcol}
\setbeamercolor{palette secondary}{fg=white,bg=bgcol}
\setbeamercolor{palette tertiary}{bg=white,fg=violet}
\setbeamercolor{palette quaternary}{fg=white,bg=bgcol}
\setbeamercolor{structure}{fg=brillaintblue}

% Headline
\setbeamercolor{headline}{fg=white,bg=lightgray}
\setbeamercolor{caption}{fg=brillaintblue}
\setbeamercolor{headline rule}{bg=brillaintblue}

% Block
\setbeamercolor{block title}{fg=brillaintblue,bg=bgcol}
\setbeamercolor{block separator}{bg=white}
\setbeamercolor{block body}{fg=white,bg=bgcol}

% Alert Block
\setbeamercolor{block alerted title}{fg=brillaintblue,bg=lightgray}
\setbeamercolor{block alerted separator}{bg=white}
\setbeamercolor{block alerted body}{fg=white,bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=white}

% Itemize
\setbeamercolor{item}{fg=violet}

% Bibliography
\setbeamercolor{bibliography item}{fg=white}
\setbeamercolor{bibliography entry author}{fg=white}
\setbeamercolor{bibliography entry title}{fg=white}
\setbeamercolor{bibliography entry location}{fg=white}
\setbeamercolor{bibliography entry note}{fg=white}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}